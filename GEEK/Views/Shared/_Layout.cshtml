<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GEEK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GEEK.styles.css" asp-append-version="true" />


    <!--Css todos-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow py-1 pb-2">
            <div class="container-fluid py-0">
                <a class="navbar-brand py-0" asp-area="" asp-controller="Home" asp-action="Index">GEEK</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between py-0">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewBag.IsHomeActive" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewBag.IsProductosActive" asp-area="Cliente" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Cliente" asp-controller="Ubicanos" asp-action="Index">Ubicanos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Cliente" asp-controller="Soporte" asp-action="Index">Soporte</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark @ViewBag.IsNosotrosActive" asp-area="Cliente" asp-controller="Nosotros" asp-action="Index">Nosotros</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administrar Contenidos</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Productos" asp-action="Index">Productos</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Categorias" asp-action="Index">Categorias</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Marcas" asp-action="Index">Marcas</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Imagenes" asp-action="Index">Imagenes</a>
                            </div>
                        </li>

                    </ul>
                </div>
                    <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="w-100">
        @if (@ViewBag.IsHomeActive == "active")
        {
            <partial name="_SliderHomePartial" />
            <partial name="_SliderMarcasPartial" />
        }
    </div>

    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-black text-white">
        <div class="container row mx-auto justify-content-evenly gap-4 flex-wrap">
            <div class="footer-section col">
                <h5>Compañia</h5>
                <ul>
                    <li><a href="#">Nosotros</a></li>
                    <li><a href="#">Nuestros Servicios</a></li>
                    <li><a href="#">Nuestra vision</a></li>
                    <li><a href="#">Afiliate</a></li>
                </ul>
            </div>
            <div class="footer-section col">
                <h5>Ayuda</h5>
                <ul>
                    <li><a href="#">Preguntas</a></li>
                    <li><a href="#">Contáctanos</a></li>
                    <li><a href="#">Soporte</a></li>
                    <li><a href="#">Ubícanos</a></li>
                </ul>
            </div>
            <div class="footer-section col">
                <h5>Tienda</h5>
                <ul>
                    <li><a href="/Cliente/Productos/Index">Productos</a></li>
                    <li><a href="/Cliente/Home/Index#multi-item-carousel">Marcas</a></li>
                    <li><a href="/Cliente/Productos/Index">Modelos</a></li>
                    <li><a href="/Cliente/Home/Index#masVendidos">Lo mas vendido</a></li>
                </ul>
            </div>
            <div class="footer-section col" style="max-width: 130px;">
                <h5>Síguenos</h5>
                <div class="row row-cols-2" class="col">
                    <i class="fa-brands fa-facebook" class="col"></i>
                    <i class="fa-brands fa-instagram" class="col"></i>
                    <i class="fa-brands fa-youtube"></i>
                    <i class="fa-brands fa-square-x-twitter" class="col"></i>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!--Js plugins-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
