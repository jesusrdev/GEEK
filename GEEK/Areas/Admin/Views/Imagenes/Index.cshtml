@{
    ViewData["Title"] = "Lista de Imagenes";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Imagenes</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Agregar Imagen
            </a>
        </div>
    </div>


    <br />
    <br />

    <table id="tblImagenes" class="table table-striped tabled-bordered table-hover" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Producto</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/imagen.js"></script>
}
