@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<style>

    form .form-control {
        margin-bottom: 8px;
        border-radius: 10px;
        padding: 10px 15px;
    }

        form .form-control:focus {
            border-color: var(--color-primary) !important;
            box-shadow: 0 0 0 .25rem #FA751544
        }


    form .form-control {
        margin-bottom: 8px;
        border-radius: 10px;
        padding: 10px 15px;
    }

        form .form-control:focus {
            border-color: var(--color-primary) !important;
            box-shadow: 0 0 0 .25rem #FA751544
        }


    form button[type="submit"] {
        margin-bottom: 8px;
        border-radius: 10px;
        padding: 10px 15px;
        background-color: var(--color-primary) !important;
        border: none
    }

    form button:hover {
        opacity: 0.85;
    }

</style>


<h3 class="text-center">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row mx-auto">
    <div class="col-md-10 mx-auto">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">Contraseña Actual:</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">Nueva Contraseña:</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar nueva contraseña:</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
