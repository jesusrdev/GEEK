@page
@model LoginModel

@{
    ViewData["Title"] = "INICIAR SESIÓN ";
}


<div class="row login align-items-center">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <h2>@ViewData["Title"]</h2>
                <p class="information">Ingresa tus datos, por favor.</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Recordarme
                        </label>
                    </div>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary mx-auto">Ingresar</button>
                </div>
                <div class="enlaces">
                    @* <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p> *@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-link btn">
                            ¿Aún no tienes una cuenta? <span class="text-orange">REGISTRARME</span>
                        </a>
                    </p>
                    @* <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
    <div class="img-container col-md-7 d-none d-md-block">
        <img src="~/imagenes//statics/login.png" alt="" class="w-100" />
    </div>
