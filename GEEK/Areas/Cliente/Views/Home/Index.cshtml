<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        var categoria = $(`input[name='categorias']:checked`).val();
        cargarProductos(categoria);

        $("input[name='categorias']").change(function () {
            categoria = $(`input[name='categorias']:checked`).val();

            cargarProductos(categoria);
        })

        function cargarProductos(categoria) {

            $.ajax({
                url: "/Cliente/Home/ObtenerProductosPorCategoria",
                type: "GET",
                data: { idCategoria : categoria },
                success: function (productos) {

                    var container = $("#containerProductos");
                    container.empty();

                    $.each(productos, function (index, producto) {

                        

                        var card = `<div class='col px-2 pb-4'>
                            <a href='' asp-route-id='${producto.idProducto}' class='card'>
                                <span class='descuento'>${producto.descuento * 100} %</span>
                                        <img src='${producto.rutaImagen}' class='card-img-top p-4' alt='${producto.nombreProducto}'>
                                <div class='card-body'>
                                    <h5 class='card-title'>${producto.nombreProducto}</h5>
                                    <div class='row justify-content-between'>
                                        <p class='col'>S/ ${producto.Precio * (1 - producto.descuento)}   <del>S/ ${producto.precio}</del></p>
                                        <div class='col'>
                                            <btn type='button' class='btn btn-dark rounded-circle'>
                                                <i class='fa-solid fa-arrow-right'></i>
                                            </btn>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        `;

                        container.append(card);
                    })

                    if (productos.length == 0) {
                        container.append(`
                            <p class="alert alert-secondary" role="alert">No hay productos en esta categoria<p>
                        `)
                    }
                }
            })
        }
    })
</script>