@model GEEK.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Inicio";
}


<div id="masVendidos" class="mas-vendidos text-center">
    <h2 class="text-center my-5">-Mas Vendidos-</h2>
    <div class="row row-cols-5 mx-auto px-3 flex-wrap align-content-center justify-content-center">
        @{
            int count = 0;
        }
        @foreach (var categoria in Model.Categorias)
        {
            if (count == 0)
            {
                <div class="col px-2 ">
                    <input type="radio" class="btn-check col " name="categorias" id="@categoria.IdCategoria" value="@categoria.IdCategoria" autocomplete="off" checked>
                    <label class="btn btn-outline-dark w-100" for="@categoria.IdCategoria">@categoria.DescripcionCategoria</label>
                </div>
            }
            else
            {
                <div class="col px-2 ">
                    <input type="radio" class="btn-check col " name="categorias" id="@categoria.IdCategoria" value="@categoria.IdCategoria" autocomplete="off">
                    <label class="btn btn-outline-dark w-100" for="@categoria.IdCategoria">@categoria.DescripcionCategoria</label>
                </div>
            }

            count++;

        }
    </div>
</div>


