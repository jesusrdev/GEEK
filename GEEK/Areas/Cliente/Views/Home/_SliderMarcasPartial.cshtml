@model GEEK.Models.ViewModels.HomeVM

<div id="multi-item-carousel" class="carousel slide bg-black py-3 pb-1" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item bg-black active">
            <div class="row row-cols-5">
                @foreach (var marca in Model.Marcas)
                {
                    <div class="col">
                        <a asp-area="Cliente" asp-controller="Productos" asp-action="Index" asp-route-idMarca="@marca.IdMarca">
                            <img src="@marca.RutaImagen" class="card-img-top" alt="@marca.NombreMarca">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
