@model GEEK.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Detalle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Imagenes.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Imagenes.Count(); i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Model.Imagenes.ElementAt(i).RutaImagen" class="d-block w-100" alt="Imagen del Producto">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <h1>@Model.Producto.NombreProducto</h1>
            <p>@Model.Producto.Descripcion</p>
            <p>@Model.Producto.DescripcioGeneral</p>
            <p><strong>Precio: </strong>@Model.Producto.Precio</p>
            <p><strong>Stock: </strong>@Model.Producto.StockProducto</p>
            <p><strong>Descuento: </strong>@Model.Producto.Descuento</p>

        </div>
    </div>

    <hr />

    <div class="container mt-4">
        <h2>Productos Recomendados</h2>
        <div class="row">
            @foreach (var recomendado in Model.Productos)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="@recomendado.Imagenes.FirstOrDefault()?.RutaImagen" class="card-img-top" alt="Imagen de Producto">
                        <div class="card-body">
                            <h5 class="card-title">@recomendado.NombreProducto</h5>
                            <p class="card-text">@recomendado.Descripcion</p>
                            <p class="card-text"><strong>Precio:</strong> S/ @(recomendado.Precio * (1 - recomendado.Descuento / 100)) <del>S/ @recomendado.Precio</del></p>
                            <a href="/Cliente/Productos/Detalle?idproducto=@recomendado.IdProducto" class="btn btn-primary">Ver Detalle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

